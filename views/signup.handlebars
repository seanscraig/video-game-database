<form class="form login-form">
    <h2>Signup</h2>
    <div class="form-group">
        <label>Email:</label>
        <input class="form-input email-signup-input" type="text" id="email-signup" />
    </div>
    <div class="form-group">
        <label>Username:</label>
        <input class="form-input" type="text" id="username-signup" />
    </div>
    <div class="form-group">
        <label>Password:</label>
        <input class="form-input password-signup-input" type="password" id="password-signup" />
    </div>
    <div class="form-group">
        <button class="btn btn-primary" id="signup-form" type="submit">Sign Up</button>
    </div>
    <div>
        <p>Already have an account?</p>
        <a href="/login">Login</a>
    </div>
</form>

<script src="/javascript/signup.js"></script>