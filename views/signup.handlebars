<div class="container">
  <div class="col-12">

    <form class="form login-form">
      <h2>Signup</h2>
      <div class="form-group mb-3">
        <label>Email:</label>
        <input
          class="form-input ms-5"
          type="text"
          id="email-signup"
        />
      </div>
      <div class="form-group mb-3">
        <label>Username:</label>
        <input class="form-input ms-3" type="text" id="username-signup" />
      </div>
      <div class="form-group mb-3">
        <label>Password:</label>
        <input
          class="form-input ms-3"
          type="password"
          id="password-signup"
        />
      </div>
      <div class="form-group d-grid">
        <button class="btn btn-primary mt-4 mx-5 " id="signup-form" type="submit">Sign Up</button>
      </div>
      <div>
        <p>Already have an account?</p>
        <a href="/login">Login</a>
      </div>
    </form>
  </div>
</div>

<!-- The Modal -->
<div id="myModal" class="modal">
  <!-- Modal Content -->
  <div class="modal-content">
    <span class="close">&times;</span>
    <p id="modal-text"></p>
  </div>
</div>

<script src="/javascript/signup.js"></script>

<script src="/javascript/modal.js"></script>