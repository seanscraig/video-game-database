{{#if games}}
<div class="row row-cols-1 row-cols-md-3 g-4">
  <div class="col">
   {{#each games as |game|}}
    <div class="card h-50" id={{game.id}}>
        <img src="{{game.image}}" alt="game image unavailable" class="card-img-top">
        <div class="card-body">
          <h5 class="card-title">{{game.title}}</h5>
        </div>
    </div>
   {{/each}}
  </div>
</div>
{{/if}}
